<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/financialGoalSettinglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmartFinancialGoalSetting.FinancialGoalSetting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivlogo"
                android:layout_width="175dp"
                android:layout_height="140dp"
                android:padding="20dp"
                android:src="@drawable/financialgoal" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/advent_pro_thin"
                android:shadowColor="#000000"
                android:text="Smart Financial Goal Setting"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ivYT"
                android:layout_width="281dp"
                android:layout_height="99dp"
                android:padding="20dp"
                android:src="@drawable/ytlogo" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="355dp"
                android:layout_height="1371dp"
                android:text="FIll content here "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvCalculatorTitle"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:text="Money Smart Calculator"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/ivCalculator"
                android:layout_width="125dp"
                android:layout_height="195dp"
                app:srcCompat="@drawable/budgeting" />

            <TextView
                android:id="@+id/tvcontent2"
                android:layout_width="355dp"
                android:layout_height="928dp"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvLink1"
                android:layout_width="355dp"
                android:layout_height="24dp"
                android:text="TextView"
                android:textColor="#03A9F4" />

            <TextView
                android:id="@+id/tvLink2"
                android:layout_width="355dp"
                android:layout_height="33dp"
                android:text="TextView"
                android:textColor="#03A9F4" />

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='"Source: Yaun, Avramidis and wood, 2020, 7 simple steps to set up financial goals and plan for the future, Available at: https://www.unimelb.edu.au/community/unimelb-from-home/street-finance/7-simple-steps-to-set-financial-goals-and-plan-for-the-future");' />

            <TextView
                android:id="@+id/tvQuizTitle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Take the quiz to earn badges"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btQuiz"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:text="Take A Quiz" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>