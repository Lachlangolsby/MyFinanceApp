<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg2"
    tools:context=".SmartInvesting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:id="@+id/ivlogo"
            android:layout_width="175dp"
            android:layout_height="140dp"
            android:padding="20dp"
            android:src="@drawable/smartinvesting" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/advent_pro_thin"
            android:shadowColor="#000000"
            android:text="Smart Investing"
            android:textColor="#1B1616"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ivYT"
            android:layout_width="277dp"
            android:layout_height="101dp"
            android:padding="20dp"
            android:src="@drawable/ytlogo" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="354dp"
            android:layout_height="1575dp"
            android:text="FIll content here "
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/ivGraph"
            android:layout_width="317dp"
            android:layout_height="362dp"
            android:src="@drawable/rrgraph" />

        <TextView
            android:id="@+id/tvContents2"
            android:layout_width="343dp"
            android:layout_height="1253dp"
            android:text="TextView"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvQuizTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Take the quiz to earn badges"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btQuiz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#040404"
            android:text="Take a quiz" />

    </LinearLayout>

</ScrollView>